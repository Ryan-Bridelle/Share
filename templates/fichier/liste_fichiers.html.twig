{% block title %}
	{{parent()}}
	Liste Fichiers
{% endblock %}

{% block body %}
	{{parent()}}
	<div class="container">
		<div class="row justify-content-center">
			<h1 class="text-center text-primary p-4">Liste Fichiers</h1>
		</div>

		<div class="row justify-content-center">
			<table class="table table-hover">
				<thead>
					<tr class="table-dark">

						
						
						<td>VraiNom</td>
						<td>Taille</td>
						<td>Extension</td>
                        <td>Propri√©taire</td>

					</tr>
          </thead>
          <tbody>


					{% for fichier in fichiers %}
						<tr class="{{ cycle(['table-primary', 'table-secondary'],loop.index0)}}">
                        <td><a href="{{path('telechargement_fichier',{'id':fichier.id})}}">{{fichier.vraiNom}}</a> </td>
                        <td> {{fichier.taille}} </td>
                        <td> {{fichier.extension}} </td>
                        <td> {{fichier.utilisateur.prenom}} </td>
                        <td> {{fichier.utilisateur.nom}} </td>

						</tr>
					{% endfor %}

				</tbody>
			</table>


		</div>
	{% endblock %}